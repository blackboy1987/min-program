.list-popup {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 20;
    background: rgba(44,40,36,0.65);
    display: flex;
    justify-content: center;
    align-items: center;
}

.popup-container {
    width: 652rpx;
    background: rgba(253,246,230,1);
    border: 2rpx solid rgba(72,53,38,1);
    box-shadow: 0px -14rpx 0px 0px rgba(224,211,181,1) inset;
    border-radius: 30rpx;
    position: relative;
}

.close-btn-container {
    position: absolute;
    right: 0;
    top: 0;
    width: 120rpx;
    height: 120rpx;
    z-index: 1;
}

.close-btn {
    position: absolute;
    right: 26rpx;
    top: 26rpx;
    width: 60rpx;
    height: 60rpx;
}

.list {
    animation: listPopup 0.4s;
}

.normal {
    animation: popup 0.3s;
}

@-webkit-keyframes popup {
    0% {
        transform: scale(0);
    }

    80% {
        transform: scale(1.1);
    }

    100% {
        transform: scale(1);
    }
}

@keyframes popup {
    0% {
        transform: scale(0);
    }

    80% {
        transform: scale(1.1);
    }

    100% {
        transform: scale(1);
    }
}

@-webkit-keyframes listPopup {
    0% {
        opacity: 0;
    }

    25% {
        opacity: 0;
        transform: scale(0);
    }

    85% {
        opacity: 1;
        transform: scale(1.1);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes listPopup {
    0% {
        opacity: 0;
    }

    25% {
        opacity: 0;
        transform: scale(0);
    }

    85% {
        opacity: 1;
        transform: scale(1.1);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

.btn-click {
    transform: scale(0.9,0.9)!important;
    transition: all 0.1s;
}

.page-bottom {
    width: 90%;
    height: 260rpx;
    flex-shrink: 0;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    margin: auto;
    margin-bottom: 38rpx;
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
}

.poem-banner {
    width: 90%;
    margin: auto;
}