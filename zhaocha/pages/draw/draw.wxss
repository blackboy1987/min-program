.container {
    height: 100vh;
    background: #fff;
    padding: 0;
}

.topBg {
    position: absolute;
    width: 100vw;
}

.rule {
    position: relative;
    font-size: 0;
    overflow: hidden;
    width: 520rpx;
    height: 280rpx;
    margin-left: calc((100% - 520rpx) / 2);
    margin-top: 50rpx;
}

.ruleBg {
    position: absolute;
    width: 100%;
    height: 100%;
}

.ruleItem {
    width: calc(100% - 100rpx);
    height: 50rpx;
    margin-bottom: 8rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #313131;
    margin-left: 50rpx;
}

.drawFree {
    width: 520rpx;
    height: 79rpx;
    margin-top: 250rpx;
    position: relative;
    margin-left: calc((100% - 520rpx) / 2);
}

.ruleTitle {
    font-size: 32rpx;
    text-align: center;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 20rpx;
    position: relative;
    margin-bottom: 20rpx;
}

.ruleL,.ruleR {
    font-size: 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #313131;
    text-align: left;
    display: inline-block;
    position: relative;
}

.ruleR {
    float: right;
}

.drawTiImg {
    width: calc(100% - 100rpx)!important;
    height: 30rpx;
    position: relative;
    margin-left: 50rpx;
    margin-top: 50rpx;
}

.main {
    width: calc(100% - 100rpx);
    margin-left: 50rpx;
    height: 500rpx;
    overflow-y: auto;
    margin-top: 20rpx;
    -webkit-overflow-scrolling: touch;
}

.mainItem {
    width: 100%;
    height: 110rpx;
    margin-bottom: 15rpx;
    background: #eee;
    border-radius: 10rpx;
    overflow: hidden;
    font-size: 28rpx;
    text-align: left;
    position: relative;
}

.mainTop,.mainBott {
    height: 55rpx;
    line-height: 75rpx;
    font-size: 28rpx;
    text-align: left;
    padding: 0 15rpx;
    box-sizing: border-box;
    color: #313131;
}

.mainBott {
    color: #888;
    line-height: 45rpx;
}