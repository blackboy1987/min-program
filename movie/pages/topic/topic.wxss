.topImg {
    width: 750rpx;
}

.topic {
    margin-top: 10rpx;
    width: 750rpx;
    -webkit-box-pack: center;
    justify-content: center;
}

.topic,.topicItem {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
}

.topicItem {
    width: 700rpx;
    -webkit-box-pack: space-evenly;
    justify-content: space-evenly;
}

.topicItem-pic {
    width: 700rpx;
    height: 240rpx;
    border-radius: 15rpx;
}

.topicItem-text {
    width: 680rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-weight: 400;
    font-size: 32rpx;
}

.topicItem-blurb {
    width: 680rpx;
    height: 40rpx;
    color: #999;
    font-size: 22rpx;
}

.loading {
    width: 750rpx;
    height: 60rpx;
    font-size: 28rpx;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    flex-wrap: wrap;
}

.MinTabItem {
    width: 750rpx;
    height: 70rpx;
    padding-bottom: 30rpx;
    white-space: nowrap;
}

.MinTabItem-item {
    width: 107rpx;
    height: 70rpx;
    display: inline-block;
    text-align: center;
}

.MinTabItem-text {
    color: #fff;
    font-size: 24rpx;
}

.MinClick-text {
    color: #f49c36;
    border-bottom: 1px solid #f49c36;
    padding-bottom: 10rpx;
}