.carousel-by {
    margin-top: 30rpx;
    width: 750rpx;
    height: 40rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

.history-div {
    width: 700rpx;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    flex-wrap: wrap;
    margin-bottom: 40px;
}

.history-data {
    margin: 10rpx;
}

.history-title-icon {
    position: absolute;
    z-index: 999;
    top: -10rpx;
    right: 0rpx;
}

.history-title-title {
    padding: 10rpx 20rpx;
    border-radius: 5px;
    text-align: left;
    lines: 1;
    text-overflow: ellipsis;
    font-size: 12px;
}

.hotkeyword {
    width: 750rpx;
    -webkit-box-orient: vertical;
    flex-direction: column;
    -webkit-box-pack: center;
    justify-content: center;
    position: relative;
}

.hotkeyword,.hottitle {
    display: flex;
    -webkit-box-direction: normal;
    -webkit-box-align: center;
    align-items: center;
}

.hottitle {
    width: 700rpx;
    height: 30px;
    box-shadow: 0 1px 0 0 #b0b0b0;
    margin-bottom: 10px;
    -webkit-box-orient: horizontal;
    flex-direction: row;
}

.hottitle-title {
    font-size: 35rpx;
}

.hotkeyword-div {
    width: 700rpx;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    flex-wrap: wrap;
}

.hotkeyword-data {
    padding: 10rpx;
    margin: 20rpx 15rpx;
    border-radius: 5px;
}

.hotkeyword-title {
    text-align: left;
    lines: 1;
    text-overflow: ellipsis;
    font-size: 28rpx;
}

.vodlist {
    width: 750rpx;
}

.vodlist-icon {
    font-size: 20px;
    text-align: center;
    margin-top: 0;
}

.selection {
    position: absolute;
    width: 750rpx;
    top: 120px;
    background-color: #fff;
    padding-bottom: 80rpx;
}

.selection-item {
    width: 750rpx;
    -webkit-box-pack: center;
    justify-content: center;
}

.selection-data,.selection-item {
    height: 100rpx;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.selection-data {
    width: 680rpx;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-pack: justify;
    justify-content: space-between;
    border-bottom: 1px solid #cfcfcf;
}

.selection-name {
    font-size: 30rpx;
    color: #6d6d6d;
    lines: 1;
    text-overflow: ellipsis;
}

.barInput {
    margin-left: 10px;
    background-color: #fff;
    border-radius: 30rpx;
    color: #6a6a6a;
    font-size: 35rpx;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    flex-wrap: nowrap;
    -webkit-box-align: center;
    align-items: center;
    justify-content: space-around;
}

.barInput-input {
    width: 80%;
    height: 70rpx;
    line-height: 70rpx;
    color: #ababab;
    font-size: 26rpx;
}