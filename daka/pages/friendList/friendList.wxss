page {
    width: 100%;
    height: 100%;
    flex-direction: column;
    background: #e6e6e6;
}

.container,page {
    display: flex;
}

.container {
    position: relative;
}

.title {
    display: flex;
    width: 100%;
    font-size: 28rpx;
    margin: 20rpx 0;
    color: #333;
}

.icon,.title {
    justify-content: center;
    align-items: center;
}

.icon {
    display: inline-flex;
}

.title .icon.tips::before {
    content: "\e630";
    font-family: iconfont;
    margin-right: 10rpx;
}

.list {
    background: #fff;
    min-height: 650rpx;
    margin: 0 30rpx;
    border-radius: 10rpx;
    flex-direction: column;
    padding: 0 20rpx;
}

.list,.list .li {
    display: flex;
}

.list .li {
    width: 100%;
    padding: 30rpx 0;
    border-bottom: 1px solid #ccc;
    justify-content: center;
    align-items: center;
}

.list .li .pic {
    display: flex;
    border-radius: 80rpx;
    overflow: hidden;
    border: 4rpx solid #f08200;
    margin-right: 20rpx;
}

.list .li .pic image {
    height: 90rpx;
    width: 90rpx;
    border-radius: 80rpx;
    overflow: hidden;
}

.list .li .right {
    flex: 1;
    -webkit-box-flex: 1;
    flex-direction: column;
    justify-content: center;
}

.list .li .right,.list .li .right .total {
    display: flex;
    align-items: center;
}

.list .li .right .total {
    width: 100%;
    font-size: 26rpx;
    color: #666;
}

.list .li .right .name {
    display: flex;
    width: 100%;
    font-size: 28rpx;
    margin-bottom: 10rpx;
}

.icon.sign::before {
    content: "\e63f";
    font-family: iconfont;
    margin-right: 10rpx;
    font-size: 24rpx;
}

.invotation {
    width: 70%;
    color: #fff;
    height: 80rpx;
    border-radius: 80rpx;
    bottom: 150rpx;
    left: 12%;
    background-image: linear-gradient(-90deg,#196fd8 2%,#19b0fb 97%);
    box-shadow: 0 6px 10px -2px #19b0fb;
}

.invotation,.showBox {
    display: flex;
    position: fixed;
    justify-content: center;
    align-items: center;
}

.showBox {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
    top: 0;
    left: 0;
    z-index: 20;
}

.showBox .inner {
    width: 80%;
}

.showBox .center,.showBox .inner {
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 20rpx;
    overflow: hidden;
}

.showBox .center {
    width: 69%;
    position: relative;
}

.showBox .center .close {
    display: flex;
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    justify-content: center;
    align-items: center;
    right: 20rpx;
    top: 20rpx;
}

.showBox .center .close::before {
    display: flex;
    content: "\e629";
    font-family: iconfont;
    margin-right: 10rpx;
    font-size: 28rpx;
    color: #f08200;
}

.showBox .center .showBoxContent,.showBox .center .title {
    display: flex;
    width: 100%;
}

.showBox .center .showBoxContent {
    flex-direction: column;
    background: #f8f8f8;
}

.showBox .center .showBoxContent .bookmark {
    width: 100%;
}

.showBox .center .btnLine {
    width: 100%;
    padding: 20rpx 0;
}

.showBox .center .btnLine,.showBox .center .btnLine button {
    display: flex;
    justify-content: center;
    align-items: center;
}

.showBox .center .btnLine button {
    width: 200rpx;
    height: 70rpx;
    background-image: linear-gradient(-90deg,#5271ff 2%,#5d8bf7 97%);
    color: #fff;
    font-size: 28rpx;
    border-radius: 10rpx;
    margin: 10rpx;
}

.bottomBar {
    width: 100%;
    height: 108rpx;
    background: #fff;
}

.bottomBar,.bottomBar .bar {
    display: flex;
}

.bottomBar .bar {
    flex: 1;
    -webkit-box-flex: 1;
    width: 1px;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.bottomBar .bar image {
    display: flex;
    width: 48rpx;
    height: 48rpx;
}

.bottomBar .bar .text {
    display: flex;
    font-size: 28rpx;
}

.bottomBar .bar.this .text {
    color: #f08200;
}

.canvas {
    position: absolute;
    right: -510%;
    top: 0;
}