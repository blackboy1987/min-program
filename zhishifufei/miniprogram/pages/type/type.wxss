page {
    background-color: #fff;
}

.shipin-ul {
    width: 100%;
    flex-wrap: wrap;
    text-align: center;
}

.shipin-li,.shipin-ul {
    display: flex;
}

.shipin-li {
    width: 48%;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    padding: .1rem;
}

.shipin-img {
    width: 95%;
    height: 7rem;
    margin: 0 auto .4rem;
}

.shipin-i {
    display: inline-block;
    width: 95%;
    font-size: .7rem;
    font-style: normal;
    color: #acacac;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}